<div class="jumbotron">
	<h1>Welcome to the SPICED database</h1>

<% if current_user.present? %>
	<h3> Please check the help funtion before you start.</h3>
	<% else %>
	<p class="lead">
	    Please log in to insert data or have a look at the data.
	</p>
 	<%= link_to 'Login', new_user_session_path, class: "btn btn-lg btn-success" %>
	<%= link_to 'Sign up', new_user_registration_path, class: "btn btn-lg btn-success" %>
<% end %>
</div>

<div class="row marketing">
	<%= render "carousel" %>
</div>

<div class="row marketing">
	<div class="col-lg-6">
	    <h4>Made with Ruby on Rails</h4>
	</div>
	<div class="col-lg-6">
	    <h4>Made in Berlin</h4>
	    <p>Developed at the Berlin School of Economics and Law</p>
	</div>
</div>

