
<div class="bs-docs-section">
  <div class="row">
    <div class="col-md-12">


      <div class="page-header">          
        <h1>Listing all Treatment Methods <br>
          <small><%= pluralize(@treatments.count, "Treatment") %></small></h1>
      </div>

      <div class="col-md-3" id="leftCol">
        <div class="well">    
          <%= render 'layouts/sidebar_show' %>
        </div>
      </div>     

      <div class="col-md-9" id="rightCol">   

        <div class="well"><%= search_form_for @search do |f| %>
          <%= f.condition_fields do |c| %>
            <div class="field">
              <%= c.attribute_fields do |a| %>
                <%= a.attribute_select associations: [:admintreatmenttemperature ,:admintreatmentsteam ,:admintreatmentfumigation ,:admintreatmentoptical,:admintreatmentmechanical ,:admintreatmentprocesstype ] %>
              <% end %>
              <%= c.predicate_select %>
              <%= c.value_fields do |v| %>
                <%= v.text_field :value %>
              <% end %>
              </div>
            <% end %>
            <div class="actions"><%= f.submit "Search", class: "btn btn-info"  %></div>
          <% end %>
        </div>


        <%= link_to 'New Treatment', new_treatment_path, class: "btn btn-success"  %>
        <%= link_to 'Export XLS', url_for(:format => 'xls'), class: "btn btn-success " %> 
        <%= link_to 'Export CSV', url_for(:format => 'csv'), class: "btn btn-success " %> <br><br>            
        <%= render 'tabletreatments' %>        
        <br>
      </div>
      
    </div>
  </div>
</div>
