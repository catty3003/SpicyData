<div class="bs-docs-section">
  <div class="row">
    <div class="col-md-12">


      <div class="page-header">          
        <h1>
          Agent <%= @agent.adminagentgenu.a_genus if @agent.adminagentgenu%> <%= @agent.adminagentspec.a_species if @agent.adminagentspec%>
        </h1>
      </div>

      <div class="col-md-3" id="leftCol">
        <div class="well">    
          <%= render 'layouts/sidebar_show' %>
        </div>
      </div>     

      <div class="col-md-9" id="rightCol"> 
        <div class="well">          
          <div class="panel panel-info">
            <div class="panel-body"> 

              <p>              
                <strong>A common name:</strong>
                <%= @agent.adminagentname.a_common_name if @agent.adminagentname %>
              </p>

              <p>
                <strong>A family:</strong>
                <%= @agent.adminagentfamily.a_family if @agent.adminagentfamily %>
              </p>

              <p>
                <strong>A genus:</strong>
                <%= @agent.adminagentgenu.a_genus if @agent.adminagentgenu%>
              </p>

              <p>
                <strong>A species:</strong>
                <%= @agent.adminagentspec.a_species if @agent.adminagentspec%>
              </p>

              <p>
                <strong>Subspecies:</strong>
                <%= @agent.subspecies %>
              </p>

              <p>
                <strong>Serovar:</strong>
                <%= @agent.serovar %>
              </p>

              <p>
                <strong>Other agent name:</strong>
                <%= @agent.other_agent_name %>
              </p>

              <p>
                <strong>Ref number:</strong>
                <%= @agent.ref_number %>
              </p>

              <p>
                <strong>Rate of illness:</strong>
                <%= @agent.rate_of_illness %>
              </p>

              <p>
                <strong>Morbidity:</strong>
                <%= @agent.morbidity %>
              </p>

              <p>
                <strong>Mortality:</strong>
                <%= @agent.mortality %>
              </p>

              <p>
                <strong>Isolation source:</strong>
                <%= @agent.isolation_source %>
              </p>

              <p>
                <strong>Natural occurence:</strong>
                <%= @agent.natural_occurence %>
              </p>

              <p>
                <strong>A comment:</strong>
                <%= @agent.a_comment %>
              </p>

              <p>
                <strong>Reference:</strong>
                <%= @agent.reference_id %>
              </p>

              <p>
                <strong>User:</strong>
                <%= @agent.user_id %>
              </p>

              <!-- Agentparam einbinden -->
              <p><strong> exposure to hazard</strong></p>
              <% @agent.agentparams.order(:infected_species).each do |p| %>
                <ul>
                  <li>
                    <strong>Infected species:</strong>
                    <%= p.infected_species if p.infected_species %>
                  </li>
                  <li>
                    <strong>Infectious dose:</strong>
                    <%= p.infectious_dose if p.infectious_dose %>
                  </li>
                  <li>
                    <strong>Level of infectious dose:</strong>
                    <%= p.level_of_infectious_dose if p.level_of_infectious_dose %>
                  </li>                  
                </ul>
              <% end %>

            </div>
          </div>    
          <%= link_to 'Edit Agent', edit_agent_path(@agent), class: "btn btn-warning btn-sm" %> |  | 
          <%= link_to 'Delete', @agent, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %> | 
          <%= link_to 'Back to all Agents', agents_path, class: "btn btn-info btn-sm" %>   
        </div>
      </div>

    </div>     
  </div>
</div>







