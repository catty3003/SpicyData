<div class="bs-docs-section">
  <div class="row">
    <div class="col-md-12">


      <div class="page-header">          
        <h1>
          Detection Method <%= @detection.d_short_name %>
        </h1>
      </div>

      <div class="col-md-3" id="leftCol">
        <div class="well">    
          <%= render 'layouts/sidebar_show' %>
        </div>
      </div>     

      <div class="col-md-9" id="rightCol"> 
        <div class="well">          
          <div class="panel panel-info">
            <div class="panel-body"> 


              <p>
                <strong>D short name:</strong>
                <%= @detection.d_short_name %>
              </p>

              <p>
                <strong>D long name:</strong>
                <%= @detection.d_long_name %>
              </p>

              <p>
                <strong>D method validated for condiments:</strong>
                <%= @detection.d_method_validated_for_condiments %>
              </p>

              <p>
                <strong>D process description:</strong>
                <%= @detection.d_process_description %>
              </p>

              <p>
                <strong>D weight of sample:</strong>
                <%= @detection.d_weight_of_sample %>
              </p>

              <p>
                <strong>D weight of sample unit:</strong>
                <%= @detection.d_weight_of_sample_unit %>
              </p>

              <p>
                <strong>Detection method dilution:</strong>
                <%= @detection.detection_method_dilution %>
              </p>

              <p>
                <strong>Detection method type:</strong>
                <%= @detection.admindetectiontype.detection_method_type if @detection.admindetectiontype %>
              </p>

              <p>
                <strong>Duration until result:</strong>
                <%= @detection.duration_until_result %>
              </p>

              <p>
                <strong>Duration until result unit:</strong>
                <%= @detection.duration_until_result_unit %>
              </p>

              <p>
                <strong>Target gen:</strong>
                <%= @detection.target_gen %>
              </p>

              <p>
                <strong>Target protein:</strong>
                <%= @detection.target_protein %>
              </p>

              <p>
                <strong>Other characteristic:</strong>
                <%= @detection.other_characteristic %>
              </p>

              <p>
                <strong>Technique:</strong>
                <%= @detection.technique %>
              </p>
                            <!-- culdetec einbinden -->
              <p><strong> cultural detection parameter: </strong></p>
              <% @detection.culdetecs.each do |p| %>
                <ul>
                  <li>
                    <strong>Medium:</strong>
                    <%= p.medium if p.medium %>
                  </li>
                  <li>
                    <strong>Agar:</strong>
                    <%= p.agar if p.agar %>
                  </li>
                  <li>
                    <strong>Incubation duration:</strong>
                    <%= p.incubation_duration if p.incubation_duration %> <%= p.incubation_duration_unit if p.incubation_duration_unit %>
                  </li>  
                  <li>
                    <strong>Incubation temperature (Â°C):</strong>
                    <%= p.incubation_temp if p.incubation_temp %>
                  </li> 
                  <li>
                    <strong>Sample volume per disc:</strong>
                    <%= p.sample_volume_per_disc if p.sample_volume_per_disc %>
                  </li>
                  <li>
                    <strong>Medium volume per disc:</strong>
                    <%= p.medium_volume_per_disc if p.medium_volume_per_disc %>
                  </li>                                                    
                </ul>
              <% end %>

              <p>
                <strong>Verification:</strong>
                <%= @detection.verification %>
              </p>

              <p>
                <strong>Interpretation:</strong>
                <%= @detection.interpretation %>
              </p>

              <p>
                <strong>D device needed:</strong>
                <%= @detection.d_device_needed %>
              </p>

              <p>
                <strong>Method for comparison:</strong>
                <%= @detection.method_for_comparison %>
              </p>

              <p>
                <strong>Lod:</strong>
                <%= @detection.lod %>
              </p>

              <p>
                <strong>Sensitivity:</strong>
                <%= @detection.sensitivity %>
              </p>

              <p>
                <strong>Specifity:</strong>
                <%= @detection.specifity %>
              </p>

              <p>
                <strong>Reliability score:</strong>
                <%= @detection.reliability_score %>
              </p>

              <p>
                <strong>D comment:</strong>
                <%= @detection.d_comment %>
              </p>

              <p>
                <strong>Reference:</strong>
                <%= @detection.reference.first_author_name if @detection.reference %>
              </p>

              <p>
                <strong>User:</strong>
                <%= @detection.user_id %>
              </p>

            </div>
          </div>    
          <%= link_to 'Edit Detection', edit_detection_path(@detection), class: "btn btn-warning btn-sm" %> |  | 
          <%= link_to 'Delete', @detection, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %> | 
          <%= link_to 'Back to all Detections', detections_path, class: "btn btn-info btn-sm" %>   
        </div>
      </div>

    </div>     
  </div>
</div>

